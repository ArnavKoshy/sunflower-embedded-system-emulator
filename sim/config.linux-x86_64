CC			= clang
GAWK			= gawk
LINT			= echo 
LD			= clang
GBISON			= bison
ENDIAN			= SF_L_ENDIAN
PLATFORM_CFLAGS 	= -D$(ENDIAN)
PLATFORM_LFLAGS 	= -lpthread
PLATFORM_OPTFLAGS	=
OPTFLAGS		= -O0
DBGFLAGS		= -g
CCFLAGS			= -Wno-gnu-designator $(DBGFLAGS) $(PLATFORM_CFLAGS) $(PLATFORM_OPTFLAGS)
LDFLAGS 		= -lm $(PLATFORM_LFLAGS)
TARGET-ARCH-FLAGS	= -DM64
